+func netToString(v interface{}) string {
+	switch n := v.(type) {
+	case net.IP:
+		return n.String()
+	case net.HardwareAddr:
+		return n.String()
+	case net.IPNet:
+		return n.String()
+	}
+
+	return fmt.Sprintf("%v", v)
